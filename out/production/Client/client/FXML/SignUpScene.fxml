<StackPane fx:id="parentContainer" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ClientAuthorization">
    <AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #EED8C9;">
        <PasswordField fx:id="signupPassword" layoutX="685.0" layoutY="531.0" prefHeight="51.0" prefWidth="380.0" promptText="Password" style="-fx-background-color: #B38867; -fx-background-radius: 20;">
            <font>
                <Font name="Segoe UI Bold" size="12.0" />
            </font>
        </PasswordField>
        <Group>
            <VBox />
        </Group>
        <TextField fx:id="signupLogin" layoutX="685.0" layoutY="430.0" prefHeight="51.0" prefWidth="380.0" promptText="Login" style="-fx-background-color: #B38867; -fx-background-radius: 20;">
            <font>
                <Font name="Segoe UI Bold" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </TextField>
        <Button fx:id="registerButton" layoutX="685.0" layoutY="748.0" mnemonicParsing="false" onAction="#register" prefHeight="109.0" prefWidth="380.0" style="-fx-background-color: #7E675E; -fx-background-radius: 2300;" text="Enter" textFill="#eed8c9">
