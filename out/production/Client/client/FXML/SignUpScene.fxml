            <font>
                <Font name="Segoe UI Black" size="24.0" />
            </font>
        </Button>
        <Label layoutX="615.0" layoutY="183.0" prefHeight="124.0" prefWidth="519.0" text="Registration" textFill="#7e675e">
            <font>
                <Font name="Segoe UI Black Italic" size="85.0" />
            </font>
        </Label>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </AnchorPane>
</StackPane>